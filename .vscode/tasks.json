{
    "tasks": [
        {
            "type": "shell",
            "label": "clean",
            "command": "rm -rf build && mkdir build"
        },
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "${cwd}/main.c",
                "${cwd}/bst.c",
                "-o",
                "${cwd}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": "clean"
        }
    ],
    "version": "2.0.0"
}